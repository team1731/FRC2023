package driverstation;

import java.awt.BorderLayout;
import java.awt.FlowLayout;
import java.awt.Font;
import java.awt.event.KeyEvent;
import java.awt.event.KeyListener;
import java.awt.image.BufferedImage;
import java.io.BufferedReader;
import java.io.File;
import java.io.IOException;
import java.io.InputStreamReader;
import java.util.Random;
import java.util.Scanner;

import javax.imageio.ImageIO;
import javax.swing.ImageIcon;
import javax.swing.JDialog;
import javax.swing.JLabel;

import edu.wpi.first.networktables.DoubleSubscriber;
import edu.wpi.first.networktables.NetworkTable;
import edu.wpi.first.networktables.NetworkTableInstance;
import edu.wpi.first.networktables.NetworkTableValue;
import edu.wpi.first.networktables.NetworkTablesJNI;

public class Keypad extends JDialog implements KeyListener {
	private JLabel label;
	private JLabel picLabel;
    private NetworkTable table;
    private ImageIcon cube;
    private ImageIcon cone;
    
	public Keypad() {
	    NetworkTableInstance inst = NetworkTableInstance.getDefault();
	    inst.startClient4("keypad");
	    inst.setServerTeam(1731);
	    inst.startDSClient();
		table = inst.getTable("KeyPad");
		setLayout(new FlowLayout());
		label = new JLabel();
		label.setFont(new Font("Arial Black", Font.BOLD, 256));
		add(label);
		BufferedImage coneImage = null;		
		BufferedImage cubeImage = null;
		try {
			coneImage = ImageIO.read(new File("images/cone.png"));
			cubeImage = ImageIO.read(new File("images/cube.png"));
		} catch (IOException e) {
			// TODO Auto-generated catch block
			e.printStackTrace();
		}
		cube = new ImageIcon(cubeImage);
		cone = new ImageIcon(coneImage);
		picLabel = new JLabel(cube);
		
		add(picLabel);
		
		setSize(700, 500);
		setVisible(true);
	}
	
    public static void main(String[] args) {
    	Keypad keypad = new Keypad();
    	keypad.addKeyListener(keypad);
    }

    enum KEYPAD_CONTROL {
    	GET_CONE    (111),
    	GET_CUBE    (106),
    	CONE_LEFT   (100),
    	CUBE_MIDDLE (101),
    	CONE_RIGHT  (102),
    	DEPLOY_LOW   (97),
    	DEPLOY_MID   (98),
    	DEPLOY_HIGH  (99),
    	CLEAR_ENTRY  (96);
    	
    	public final int value;
    	
    	private KEYPAD_CONTROL(int value) {
    		this.value = value;
    	}
    }
    
	@Override
	public void keyPressed(KeyEvent e) {
        String keyCode = Integer.toString(e.getKeyCode());
        label.setText(keyCode);
        // 111 == GET CONE
        // 106 == GET CUBE
        // 100 == CONE LEFT
        // 101 == CUBE MIDDLE
        // 102 == CONE RIGHT
        //  97 == DEPLOY LOW
        //  98 == DEPLOY MID
        //  99 == DEPLOY HIGH
        //  96 == CLEAR ENTRY
        if(keyCode.equals("40")) {
        	picLabel.setIcon(cone);
        }
        else if(keyCode.equals("35")) {
        	picLabel.setIcon(cube);
        }
	    table.putValue("driver entry", NetworkTableValue.makeString(keyCode));
	    System.out.println("sent " + keyCode + " to network tables");   
	}

	@Override
	public void keyReleased(KeyEvent arg0) {
		// TODO Auto-generated method stub
		
	}

	@Override
	public void keyTyped(KeyEvent arg0) {
		// TODO Auto-generated method stub
		
	}
}
